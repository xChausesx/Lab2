@model Lab2.Models.Author

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ShortName"></label>
        <input asp-for="ShortName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Bio"></label>
        <textarea asp-for="Bio" class="form-control"></textarea>
    </div>

    <br />
    <div class="form-group">
        <label>Current Photo:</label>
        @if (Model.Photo != null)
        {
            <img src="data:image;base64,@(Convert.ToBase64String(Model.Photo))" width="100" height="100" />
        }
    </div>
    <br />
    <div class="form-group">
        <label asp-for="PhotoFile"></label>
        <input asp-for="PhotoFile" type="file" class="form-control" accept="image/*" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
